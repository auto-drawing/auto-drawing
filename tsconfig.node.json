{
  "compilerOptions": {
    "composite": true,
    "target": "es2018",
    "lib": ["esnext"],
    "removeComments": false,
    "module": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@auto-drawing/*": ["packages/*"]
    },
    "types": ["node"]
  },
  "include": ["scripts/", "types"]
}
